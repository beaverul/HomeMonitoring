<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"></android.widget.RelativeLayout>

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="212dp"
            android:layout_height="42dp"
            android:layout_below="@+id/user"
            android:layout_alignStart="@+id/register"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:text="Password"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="145dp"
            android:text="Login" />

        <Button
            android:id="@+id/register"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="79dp"
            android:text="Register" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user"
            android:layout_alignParentTop="true"
            android:layout_marginTop="145dp"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="216dp"
            android:layout_height="51dp"
            android:layout_above="@+id/user"
            android:layout_alignStart="@+id/pass"
            android:layout_marginBottom="-32dp"
            android:text="Username/E-mail"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp" />

    </android.widget.RelativeLayout>
</LinearLayout>